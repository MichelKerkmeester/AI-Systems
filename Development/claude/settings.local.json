{
  "permissions": {
    "allow": [
      "Bash(tree:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(sort:*)",
      "Bash(curl:*)",
      "Bash(find:*)",
      "mcp__chrome-devtools__new_page",
      "mcp__chrome-devtools__resize_page",
      "mcp__chrome-devtools__take_snapshot",
      "mcp__chrome-devtools__list_console_messages",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(node --version:*)"
    ],
    "deny": [],
    "ask": [],
    "additionalDirectories": [
      "/Users"
    ]
  },
  "enabledMcpjsonServers": [
    "chrome-devtools",
    "chrome-devtools-2",
    "chrome-devtools-3",
    "chrome-devtools-4",
    "claude-mem"
  ],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "node '/Users/MCP Servers/claude-mem/plugin/scripts/context-hook.js'",
            "timeout": 300000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/scripts/validate-bash.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/scripts/validate-post-response.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/scripts/validate-post-response.sh"
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node '/Users/MCP Servers/claude-mem/plugin/scripts/save-hook.js'",
            "timeout": 120000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/scripts/validate-skill-activation.sh"
          },
          {
            "type": "command",
            "command": "node '/Users/MCP Servers/claude-mem/plugin/scripts/new-hook.js'",
            "timeout": 120000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node '/Users/MCP Servers/claude-mem/plugin/scripts/summary-hook.js'",
            "timeout": 120000
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node '/Users/MCP Servers/claude-mem/plugin/scripts/cleanup-hook.js'",
            "timeout": 120000
          }
        ]
      }
    ]
  }
}
